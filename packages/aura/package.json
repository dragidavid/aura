{
  "name": "@drgd/aura",
  "version": "0.0.1",
  "description": "Extract beautiful color palettes from any image. Zero config, works everywhere.",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "dragidavid",
    "url": "https://x.com/dragidavid"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dragidavid/aura.git",
    "directory": "packages/aura"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "aura",
    "color",
    "palette",
    "extract",
    "image",
    "react",
    "next",
    "extract-colors",
    "color-palette",
    "color-extraction",
    "dominant-colors"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "tsc",
    "release": "changeset version",
    "pub:release": "pnpm build && pnpm publish --access public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "dependencies": {
    "sharp": "^0.33.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "tsup": "^8.3.5",
    "typescript": "latest"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all",
    "maintained node versions"
  ]
}
