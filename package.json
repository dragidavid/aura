{
  "name": "@drg/aura",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "aura:build": "turbo build --filter=@drg/aura build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "echo \"No tests specified\" && exit 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "release": "changeset version",
    "pub:release": "cd packages/aura && pnpm pub:release"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@changesets/changelog-github": "^0.5.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@9.13.2"
}
