{
  "name": "aura",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "aura:build": "turbo build --filter=@drgd/aura build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "release": "changeset version",
    "pub:release": "cd packages/aura && pnpm pub:release"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@changesets/changelog-github": "^0.5.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.9.0"
}
